pipeline {
    agent {
        label 'master'
    }
    stages {
        stage('Checkout') {
            steps {
                sh('./pipelines/setupDevopsCode.sh')
            }
        }

        stage('Deploy') {
            steps {
                sh '''
                cd sunbird-devops/ansible
                ansible-playbook -i ../../ansible/inventories/ntp-production jenkins-slave.yml --tags jenkins-slave --vault-password-file /run/secrets/vault-pass-ntp-production
                '''
            }
        }
    }
}
