pipeline {
    agent {
        label 'general-staging'
    }
    stages {
        stage('Checkout') {
            steps {
                sh('./pipelines/setupDevopsCode.sh')
            }
        }
        stage('Pre-Build'){
            steps {
                sh('./sunbird-devops/ansible/installDeps.sh')
            }
        }
        stage('Deploy') {
            steps {
                sh '''
                cd sunbird-devops/ansible
                ansible-playbook -i ../../ansible/inventories/staging provision.yml --tags postgresql-slave --vault-password-file /run/secrets/vault-pass
                '''
            }
        }
    }
}
