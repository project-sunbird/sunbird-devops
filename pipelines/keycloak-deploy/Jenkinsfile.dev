#!groovy

node('general-dev') {

    currentBuild.result = "SUCCESS"

    try {
       stage('Checkout'){
          checkout scm
          sh('./pipelines/setupDevopsCode.sh')
       }

       stage('Pre-Build'){
         sh('./sunbird-devops/ansible/installDeps.sh')
       }

       stage('Build'){
         step ([$class: 'CopyArtifact',
          projectName: 'Build/Keycloak_Build',
          filter: 'keycloak.tar.gz'
          target: . ]);
        sh('cd sunbird-devops/ansible && ansible-playbook -i ../../ansible/inventories/dev  keycloak.yml --tags deploy --vault-password-file  /run/secrets/vault-pass ')
       }
    }
    catch (err) {
        currentBuild.result = "FAILURE"
        throw err
    }
}
