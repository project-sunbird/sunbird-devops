pipeline {
    agent {
        label 'general-staging'
    }
    stages {
        stage('Pre-Build'){
            steps {
                sh('chmod a+x ansible/installDeps.sh')
                sh('./ansible/installDeps.sh')
            }
        }

        stage('Deploy') {
            steps {
              step ([$class: 'CopyArtifact',
                projectName: 'Dev/Proxy',
                filter: 'metadata.json']);

               sh 'METADATA_FILE=metadata.json ARTIFACT_LABEL=bronze ENV=staging ./images/proxy/deploy.sh'

               archive includes: "metadata.json"
            }
        }
    }
}