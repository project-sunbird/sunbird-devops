#!groovy

node('general-spike') {

    currentBuild.result = "SUCCESS"

    try {
       stage('Checkout'){
          checkout scm
          sh('./pipelines/setupDevopsCode.sh')
       }

       stage('Pre-Build'){
         sh('./sunbird-devops/ansible/installDeps.sh')
       }

       stage('Deploy'){
        step ([$class: 'CopyArtifact',
          projectName: 'Build/Echo_Server_Build',
          filter: 'metadata.json']);
        sh 'METADATA_FILE=metadata.json ENV=spike ./pipelines/api-manager/deploy.sh'
        archive includes: "metadata.json"
       }
    }
    catch (err) {
        currentBuild.result = "FAILURE"
        throw err
    }

}
