# This is a YAML-formatted file.
# Declare variables to be passed into your templates.
namespace: "logging"
replicaCount: 1

image:
  repository: sunbird/oauth2_proxy
  tag: v1.0
  pullPolicy: IfNotPresent

imagePullSecrets: []
nameOverride: ""
fullnameOverride: ""

service:
  type: ClusterIP
  port: 4111

resources:
   limits:
     cpu: 500m
     memory: 300Mi
   requests:
     cpu: 200m
     memory: 128Mi

nodeSelector: {}

tolerations: []

affinity: {}

oAuthConfig:
   oauth2_proxy.cfg: |
     http_address = ":4111"
     redirect_url = "{{kibana_oauth_redirect_url}}"
     upstreams = "http://{{swarm_dashboard}}:5601"
     email_domains = {{kibana_oauth_authenticated_email_domains_kube}}
     client_id = "{{google_client_id}}"
     client_secret = "{{google_client_secret}}"
     authenticated_emails_file = "/etc/oauth2/auth-emails/authenticated_email.txt"
     cookie_name = "_oauth2_proxy"
     cookie_secret = "{{cookie_secret}}"
     cookie_expire = "24h"
     cookie_refresh = "4h"
     cookie_secure = true
     cookie_httponly = true
     silence_ping_logging = true
     skip_provider_button = true

authenticatedEmails:
   authenticated_email.txt: |
     {% for key in kibana_oauth_authenticated_email_ids %}
      {{key}}
     {% endfor %}

updateStrategy:
  type: "Recreate"

