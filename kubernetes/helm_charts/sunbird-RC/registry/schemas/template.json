{
  "@context": [
    "https://www.w3.org/2018/credentials/v1",
    "https://raw.githubusercontent.com/sknirmalkar89/sunbird-rc-core/main/sunbird-specs/context.json"
  ],
  "type": [
    "VerifiableCredential"
  ],
  "issuanceDate": "{{osCreatedAt}}",
  "credentialSubject": {
    "type":"{{type}}",
    "name": "{{recipient.name}}",
    "trainingName": "{{training.name}}",
    "trainingId":"{{training.id}}"
  },
  "signatory":[
    {{#each signatory}}
    {
      "id":"https://raw.githubusercontent.com/sknirmalkar89/sunbird-rc-core/main/sunbird-specs/READ.md#signatory",
      "identity":"{{identity}}",
      "type":[
        "Extension",
        "extensions:SignatoryExtension"
      ],
      "designation":"{{designation}}",
      "image":"{{image}}",
      "name":"{{name}}"
    }
    {{#unless @last}}, {{/unless}}
    {{/each}}

  ],
  "issuer":{
    "id":"https://raw.githubusercontent.com/sknirmalkar89/sunbird-rc-core/main/sunbird-specs/READ.md#Issuer",
    "type":[
      "Issuer"
    ],
    "name":"{{issuer.name}}",
    "url":"{{issuer.url}}",
    "publicKey":["{{issuer.kid}}"]
  }

}