### Default variable file for cert-registry-service ###

namespace: {{ namespace }}
imagepullsecrets: {{ imagepullsecrets }}
dockerhub: {{ dockerhub }}

replicaCount: {{certregistry_replicacount|default(1)}}
repository: {{certregistry_repository|default('cert_registry_service')}}
image_tag: {{ image_tag }}
resources:
  requests:
    cpu: {{certregistry_cpu_req|default('100m')}}
    memory: {{certregistry_mem_req|default('100Mi')}}
  limits:
    cpu: {{certregistry_cpu_limit|default('1')}}
    memory: {{certregistry_mem_limit|default('550Mi')}}
network:
  port: 9000
strategy:
  type: RollingUpdate
  maxsurge: 1
  maxunavailable: 0

certregistry:
{% if (certregistry is not defined) and certregistry.readinessProbe is not defined %}
  readinessProbe:
    httpGet:
      path: /health
      port: 9000
    initialDelaySeconds: 30
    periodSeconds: 10
    timeoutSeconds: 5
    failureThreshold: 5
    successThreshold: 1
{% elif certregistry.readinessProbe %}
{{ certregistry.readinessProbe | to_nice_yaml }}
{% endif %}
{% if (certregistry is not defined) and certregistry.livenessProbe is not defined %}
  livenessProbe:
    httpGet:
      path: /service/health
      port: 9000
    initialDelaySeconds: 60
    periodSeconds: 10
{% elif certregistry.livenessProbe %}
{{ certregistry.livenessProbe | to_yaml }}
{% endif %}

  
