### variables for apimanager-kong service ###

namespace: {{ namespace }}
imagepullsecrets: {{ imagepullsecrets }}
dockerhub: {{ dockerhub }}

apimanagerecho:
  replicaCount: {{replicacount|default(1)}}
  repository: {{apimanagerecho_repository|default('echo-server')}}
  image_tag: 1.5.0-gold
  resources:
    cpu: {{api_manager_echo|default('50m')}}
    memory: {{api_manager_echo|default('50Mi')}}
  network:
    port: 9595
    targetport: 9595
  strategy:
    type: RollingUpdate
