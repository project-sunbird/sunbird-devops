### Default variable file for cert-service ###

namespace: {{ namespace }}
imagepullsecrets: {{ imagepullsecrets }}
dockerhub: sunbird

replicaCount: {{logstash_replicacount|default(1)}}
repository: 'logstash'
image_tag: 5.6-alpine
resources:
  requests:
    cpu: {{logstash_cpu_req|default('100m')}}
    memory: {{logstash_mem_req|default('100Mi')}}
  limits:
    cpu: {{cert_cpu_limit|default('1')}}
    memory: {{cert_mem_limit|default('1024Mi')}}
network:
  port: 5044
  targetport: 5044
strategy:
  type: RollingUpdate
  maxsurge: 1 
  maxunavailable: 1
