### Default variable file for cert-service ###

namespace: {{ namespace }}
imagepullsecrets: {{ imagepullsecrets }}
dockerhub: {{ dockerhub }}


replicaCount: {{ml_report_replicacount|default(1)}}
repository: {{ml_report_repository|default('ml-report-service')}}
image_tag: {{ image_tag }}
resources:
  requests:
    cpu: {{ml_report_cpu_req|default('100m')}}
    memory: {{ml_report_mem_req|default('100Mi')}}
  limits:
    cpu: {{ml_report_cpu_limit|default('1')}}
    memory: {{ml_report_mem_limit|default('1024Mi')}}
network:
  port: 3000
  targetport: 3000
strategy:
  type: RollingUpdate
  maxsurge: {{ ml_report_maxsurge|default('25%') }}
  maxunavailable: {{ ml_report_maxunavailable|default('25%') }}
  
{{ ml_report_liveness_readiness | to_nice_yaml }}
ml_report_access_basepath: {{ ml_report_access_basepath | default('/opt/ml_report/keycloak-public-keys/') }}

