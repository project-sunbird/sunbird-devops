### Default variable file for cert-service ###

namespace: {{ namespace }}
imagepullsecrets: {{ imagepullsecrets }}
dockerhub: {{ dockerhub }}

replicaCount: {{ml_project_replicacount|default(1)}}
repository: {{ml_project_repository|default('ml-project-service')}}
image_tag: {{ image_tag }}
resources:
  requests:
    cpu: {{ml_project_cpu_req|default('100m')}}
    memory: {{ml_project_mem_req|default('100Mi')}}
  limits:
    cpu: {{ml_project_cpu_limit|default('1')}}
    memory: {{ml_project_mem_limit|default('1024Mi')}}
network:
  port: 3000
  targetport: 3000
strategy:
  type: RollingUpdate
  maxsurge: {{ ml_project_maxsurge|default('25%') }}
  maxunavailable: {{ ml_project_maxunavailable|default('25%') }}
  
{{ ml_project_liveness_readiness | to_nice_yaml }}
ml_project_access_basepath : {{ ml_project_access_basepath | default('/opt/ml_project/keycloak-public-keys/') }}
