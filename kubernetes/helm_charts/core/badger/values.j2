### Default variable file for badger-service ###

namespace: {{ namespace }}
imagepullsecrets: {{ imagepullsecrets }}
dockerhub: {{ dockerhub }}

replicaCount: {{replicacount|default(1)}}
repository: {{cert_repository|default('badger')}}
image_tag: {{image_tag }}
resources:
  requests:
    cpu: {{badger_service_cpu_req|default('50m')}}
    memory: {{badger_service_mem_req|default('50Mi')}}
  limits:
    cpu: {{badger_service_cpu_limit|default('50m')}}
    memory: {{badger_service_mem_limit|default('50Mi')}}
network:
  port: 8004
  targetport: 8004
strategy:
  type: RollingUpdate
  maxsurge: 1
  maxunavailable: 0