### Default variable file for cert-service ###

namespace: {{ namespace }}
imagepullsecrets: {{ imagepullsecrets }}
dockerhub: {{ dockerhub }}

replicaCount: {{cert_replicacount|default(1)}}
repository: {{cert_repository|default('cert_service')}}
image_tag: {{ image_tag }}
resources:
  requests:
    cpu: {{cert_cpu_req|default('100m')}}
    memory: {{cert_mem_req|default('100Mi')}}
  limits:
    cpu: {{cert_cpu_limit|default('1')}}
    memory: {{cert_mem_limit|default('500Mi')}}
network:
  port: 9011
  targetport: 9000
strategy:
  type: RollingUpdate
  maxsurge: 1
  maxunavailable: 0

cert:
  readinessprobe:
    enabled: true
  livenessprobe:
    enabled: true 
  readinessProbe:
    httpGet:
      path: /health
      port: 9000
    initialDelaySeconds: 30
    periodSeconds: 10
    timeoutSeconds: 5
    failureThreshold: 5
    successThreshold: 1
  livenessProbe:
    httpGet:
      path: /service/health
      port: 9000
    initialDelaySeconds: 60
    periodSeconds: 10

  

