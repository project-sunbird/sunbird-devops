### Default variable file for cert-service ###

namespace: {{ namespace }}
imagepullsecrets: {{ imagepullsecrets }}
dockerhub: {{ dockerhub }}


replicaCount: {{sl_sunbird_replicacount|default(1)}}
repository: {{sl_sunbird_repository|default('sunbird-service')}}
image_tag: {{ image_tag }}
resources:
  requests:
    cpu: {{sl_sunbird_cpu_req|default('100m')}}
    memory: {{sl_sunbird_mem_req|default('100Mi')}}
  limits:
    cpu: {{sl_sunbird_cpu_limit|default('1')}}
    memory: {{sl_sunbird_mem_limit|default('1024Mi')}}
network:
  port: 4551
  targetport: 4551
strategy:
  type: RollingUpdate
  maxsurge: {{ sl_sunbird_maxsurge|default('25%') }}
  maxunavailable: {{ sl_sunbird_maxunavailable|default('25%') }}
  
{{ sl_sunbird_liveness_readiness | to_nice_yaml }}
sl_sunbird_access_basepath: {{ sl_sunbird_access_basepath | default('/opt/sunbird/keycloak-public-keys/') }}


