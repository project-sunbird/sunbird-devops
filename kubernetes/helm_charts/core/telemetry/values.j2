
### variables for telemetry service ###

namespace: {{ namespace }}
imagepullsecrets: {{ imagepullsecrets }}
dockerhub: {{ dockerhub }}

replicaCount: {{telemetry_replicacount|default(1)}}
repository: {{telemetry_repository|default('telemetry-service')}}
image_tag: {{ image_tag }}
resources:
  requests:
    cpu: {{telemetry_cpu_req|default('100m')}}
    memory: {{telemetry_mem_req|default('100Mi')}}
  limits:
    cpu: {{telemetry_cpu_limit|default('1')}}
    memory: {{telemetry_mem_limit|default('1024Mi')}}
network:
  port: 9001
  targetport: 9001
strategy:
  type: RollingUpdate
  maxsurge: 1
  maxunavailable: 0

telemetry:
  readinessprobe:
    enabled: true
  livenessprobe:
    enabled: true
  readinessProbe:
    httpGet:
      path: /health
      port: 9001
    initialDelaySeconds: 30
    periodSeconds: 10
    timeoutSeconds: 5
    failureThreshold: 5
    successThreshold: 1
  livenessProbe:
    httpGet:
      path: /health
      port: 9001
    initialDelaySeconds: 60
    periodSeconds: 10

  
