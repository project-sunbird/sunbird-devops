### Default variable file for cert-service ###

namespace: {{ namespace }}
imagepullsecrets: {{ imagepullsecrets }}
dockerhub: {{ dockerhub }}

env:
  javaoptions: {{federationservice_java_mem_limit|default('-Xmx600m')}}

replicaCount: {{federationservice_replicacount|default(1)}}
repository: {{federationservice_repository|default('federationservice')}}
image_tag: {{ image_tag }}
resources:
  requests:
    cpu: {{federationservice_cpu_req|default('100m')}}
    memory: {{federationservice_mem_req|default('100Mi')}}
  limits:
    cpu: {{federationservice_cpu_limit|default('1')}}
    memory: {{federationservice_mem_limit|default('1024Mi')}}
network:
  port: 9011
  targetport: 9011
strategy:
  type: RollingUpdate
  maxsurge: {{ federationservice_maxsurge|default('25%') }}
  maxunavailable: {{ federationservice_maxunavailable|default('25%') }}

{{ federationservice_liveness_readiness | to_nice_yaml }}

autoscaling:
  enabled: {{ federationservice_autoscaling_enabled | default('false') }}
  minReplicas: {{ federationservice_autoscaling_minReplicas|default(1) }}
  maxReplicas: {{ federationservice_autoscaling_maxReplicas|default(2) }}
  targetCPUUtilizationPercentage: {{ federationservice_autoscaling_targetCPUUtilizationPercentage|default(60) }}
  targetMemoryUtilizationPercentage: {{ federationservice_autoscaling_targetMemoryUtilizationPercentage|default('') }}