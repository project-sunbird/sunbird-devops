### Default variable file for cert-service ###

namespace: {{ namespace }}
imagepullsecrets: {{ imagepullsecrets }}
dockerhub: {{ dockerhub }}

env:
  javaoptions: {{uciapi_java_mem_limit|default('-Xmx600m')}}

replicaCount: {{uciapi_replicacount|default(1)}}
repository: {{uciapi_repository|default('uciapi')}}
image_tag: {{ image_tag }}
resources:
  requests:
    cpu: {{uciapi_cpu_req|default('100m')}}
    memory: {{uciapi_mem_req|default('100Mi')}}
  limits:
    cpu: {{uciapi_cpu_limit|default('1')}}
    memory: {{uciapi_mem_limit|default('1024Mi')}}
network:
  port: 9011
  targetport: 9011
strategy:
  type: RollingUpdate
  maxsurge: {{ uciapi_maxsurge|default('25%') }}
  maxunavailable: {{ uciapi_maxunavailable|default('25%') }}

{{ uciapi_liveness_readiness | to_nice_yaml }}

autoscaling:
  enabled: {{ uciapi_autoscaling_enabled | default('false') }}
  minReplicas: {{ uciapi_autoscaling_minReplicas|default(1) }}
  maxReplicas: {{ uciapi_autoscaling_maxReplicas|default(2) }}
  targetCPUUtilizationPercentage: {{ uciapi_autoscaling_targetCPUUtilizationPercentage|default(60) }}
  targetMemoryUtilizationPercentage: {{ uciapi_autoscaling_targetMemoryUtilizationPercentage|default('') }}