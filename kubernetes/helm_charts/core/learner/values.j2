
### Default variable file for learner-service ###

namespace: {{ namespace }}
imagepullsecrets: {{ imagepullsecrets }}
dockerhub: {{ dockerhub }}

replicaCount: {{learner_replicacount|default(1)}}
repository: {{learner_repository|default('learner_service')}}
image_tag: {{ image_tag }}
resources:
  requests:
    cpu: {{learner_cpu_req|default('50m')}}
    memory: {{learner_mem_req|default('50Mi')}}
  limits:
    cpu: {{learner_cpu_limit|default('1')}}
    memory: {{learner_mem_limit|default('1000Mi')}}
network:
  port: 9000
  targetport: 9000
strategy:
  type: RollingUpdate
  maxsurge: 1
  maxunavailable: 0

