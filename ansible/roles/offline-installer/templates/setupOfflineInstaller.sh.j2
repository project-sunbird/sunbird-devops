#!/bin/bash

# Downgrade the node version
npm install -g n
n 8.16
cd /project/src

if [ "windows32" != "windows32" ];
then
#Build the offline installer
	npm install
	npm run dist
fi

if [ "windows32" == "windows32" ];
then
	npm run dist
	npm run dist-win32 
	cp 'dist/1.0.0/win/ia32/desktop-app Setup 1.0.0.exe' ../offline_artifacts/{{time}}/
elif [ "windows32" == "windows64" ];
then
	npm run dist-win64
        cp 'dist/1.0.0/win/x64/DIKSHA Setup 1.0.0.exe' ../offline_artifacts/{{time}}/
elif [ "windows32" == "debian" ];
then
	npm run dist-linux
        cp dist/1.0.0/linux/x64/DIKSHA_1.0.0_amd64.deb ../offline_artifacts/{{time}}/
fi
