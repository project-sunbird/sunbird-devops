#!/bin/bash

version=$(cat src/package.json | jq -r '.version')

# constructing the latest.json file
echo "{\"version\":\"${version}\",\"windows\":{\"32bit\":\"diksha_${version}_windows32bit.exe\",\"64bit\":\"diksha_${version}_windows64bit.exe\"},\"linux\":{\"64bit\":\"diksha_${version}_linux64bit.deb\"}}" | jq '.' | tee latest.json
