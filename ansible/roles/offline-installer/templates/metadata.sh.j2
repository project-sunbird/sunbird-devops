#!/bin/bash

version=$(cat src/package.json | jq -r '.version')

# constructing the latest.json file
echo "{\"version\":\"${version}\",\"windows\":{\"32bit\":\"diksha_${version}_32bit.exe\",\"64bit\":\"diksha_${version}_64bit.exe\"},\"linux\":{\"64bit\":\"diksha_${version}_64bit.deb\"}}" | jq '.' | tee -a latest.json
