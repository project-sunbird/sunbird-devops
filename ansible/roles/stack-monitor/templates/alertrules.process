ALERT kafka_process_not_running
  IF namedprocess_namegroup_states{groupname="kafka",state="Sleeping"} < 2
  FOR 1m
  ANNOTATIONS {
      summary = "Kafka process is not running",
      description = "Number of running processes are: {% raw %}{{$value}}{% endraw %}",
  }
