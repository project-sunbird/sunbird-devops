ALERT high_cpu_usage_on_container_CRITICAL
  IF sum(rate(container_cpu_usage_seconds_total{container_label_com_docker_swarm_task_name=~".+"}[5m])) by (container_label_com_docker_swarm_service_name,container_label_com_docker_swarm_task_name,instance) * 100 > 95
  FOR 5m
LABELS {
    severity = "CRITICAL"
  }
  ANNOTATIONS {
      summary = "HIGH CPU USAGE WARNING: TASK '{% raw %}{{ $labels.container_label_com_docker_swarm_task_name }}{% endraw %}' on '{% raw %}{{ $labels.instance }}{% endraw %}'",
      description = "{% raw %}{{ $labels.container_label_com_docker_swarm_task_name }}{% endraw %} is using {% raw %}{{ $value }}{% endraw %}% CPU. Threshold is : {{ container_cpu_usage_percentage_theshold }}%",
  }

ALERT high_memory_usage_on_container_WARNING
  IF (container_memory_usage_bytes{container_label_com_docker_swarm_task_name=~".+"} / container_spec_memory_limit_bytes)  * 100 >= 70 AND (container_memory_usage_bytes{container_label_com_docker_swarm_task_name=~".+"} / container_spec_memory_limit_bytes)  * 100 < 85
  FOR 5m
LABELS {
    severity = "WARNING"
  }
  ANNOTATIONS {
      summary = "HIGH MEMORY USAGE WARNING: TASK '{% raw %}{{ $labels.container_label_com_docker_swarm_task_name }}{% endraw %}' on '{% raw %}{{ $labels.instance }}{% endraw %}'",
      description = "{% raw %}{{ $labels.container_label_com_docker_swarm_task_name }}{% endraw %} is using {% raw %}{{ $value }}{% endraw %}% memory. Threshold is : 70%",
  }
ALERT high_memory_usage_on_container_CRITICAL
  IF (container_memory_usage_bytes{container_label_com_docker_swarm_task_name=~".+"} / container_spec_memory_limit_bytes)  * 100 >= 85 AND (container_memory_usage_bytes{container_label_com_docker_swarm_task_name=~".+"} / container_spec_memory_limit_bytes)  * 100 < 95
  FOR 5m
LABELS {
    severity = "CRITICAL"
  }
  ANNOTATIONS {
      summary = "HIGH MEMORY USAGE WARNING: TASK '{% raw %}{{ $labels.container_label_com_docker_swarm_task_name }}{% endraw %}' on '{% raw %}{{ $labels.instance }}{% endraw %}'",
      description = "{% raw %}{{ $labels.container_label_com_docker_swarm_task_name }}{% endraw %} is using {% raw %}{{ $value }}{% endraw %}% memory. Threshold is : 85%"
  }
ALERT high_memory_usage_on_container_FATAL
  IF (container_memory_usage_bytes{container_label_com_docker_swarm_task_name=~".+"} / container_spec_memory_limit_bytes)  * 100 >= 95
  FOR 5m
LABELS {
    severity = "FATAL"
  }
  ANNOTATIONS {
      summary = "HIGH MEMORY USAGE WARNING: TASK '{% raw %}{{ $labels.container_label_com_docker_swarm_task_name }}{% endraw %}' on '{% raw %}{{ $labels.instance }}{% endraw %}'",
      description = "{% raw %}{{ $labels.container_label_com_docker_swarm_task_name }}{% endraw %} is using {% raw %}{{ $value }}{% endraw %}% memory. Threshold is : 95%",
  }
