# ML Project Service Config
# Application port number which the service will listen to
APPLICATION_PORT={{ml_project_application_port | default("3000")}}

# Application running enviornment 
APPLICATION_ENV={{ml_project_application_env | default("development")}}

# Secure token access Admin related API's
# The value of internal access token can be generated by command - "openssl rand -hex 10"
INTERNAL_ACCESS_TOKEN={{ml_project_internal_access_token}}

# Mongo db  configurations
# Mongodb host
MONGODB_URL={{ml_project_mongodb_url | default(groups['mongo_master'][0]+':27017')}}

# ML Core Service
ML_CORE_SERVICE_URL={{ml_core_service_url | default("http://ml-core-service:3000")}}                                   

# Ml Report service url 
ML_REPORTS_SERVICE_URL={{ml_report_service_url | default("http://ml-report-service:3000")}}  

# Ml Survey service url
ML_SURVEY_SERVICE_URL={{ml_survey_service_url | default("http://ml-survey-service:3000")}} 

# Kafka topic name to listen for submissions completed against project tasks
SUBMISSION_TOPIC={{ml_project_submission_topic | default("sl-improvement-project-submission"+env)}}

# Kafka enable or disable communication flag
KAFKA_COMMUNICATIONS_ON_OFF={{ml_project_kafka_communications_on_off | default("ON")}}

# IP address of kafka server with port without HTTP
KAFKA_URL={{ml_project_kafka_url | default(groups['processing-cluster-kafka'][0]+':9092')}}

# Kafka consumer group for ML Project Service
KAFKA_GROUP_ID={{ml_project_kafka_group_id | default("ml-project-service")}}
