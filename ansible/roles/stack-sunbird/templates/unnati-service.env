#Environment
NODE_ENV={{env}}

#Port where the application will run
APPLICATION_PORT={{unnati_application_port|default('4301')}}

#Application Environment Var
APPLICATION_ENV={{env}}

#Domain Name 
APPLICATION_BASE_HOST={{domain_name}}

#Base Path where the service is hosted
APPLICATION_BASE_URL={{unnati_application_base_url|default('/improvement-project/')}}

#TO Enable console logging
ENABLE_CONSOLE_LOGGING={{unnati_enable_console_logging|default('ON')}}

#To Enable File Logging
ENABLE_FILE_LOGGING={{unnati_enable_file_logging|default('ON')}}

#Authorization Token
AUTHORIZATION={{unnati_authorization|default('')}}

#Internal Access Token for Unnati Service
INTERNAL_ACCESS_TOKEN={{unnati_internal_access_token|default('')}}

#Database Setting
TRANSFER_FROM_DB={{unnati_transfer_from_db|default('')}}

#DB URL
MONGODB_URL={{unnati_mongodb_url|default("")}}

#DB Port
MONGODB_PORT={{unnati_mongodb_port|default("27017")}}

#Database Name
MONGODB_DATABASE_NAME={{unnati_mongodb_database_name|default("")}}
DB={{unnati_mongodb_database_name|default("")}}

#Domain Name where the service is getting hosted
SHIKSHALOKAM_BASE_HOST={{domain_name}}

#Flag to enable/disable learner service check
DISABLE_LEARNER_SERVICE_ON_OFF={{unnati_disable_learner_service_on_off|default("OFF")}}

#DB Collection
MIGRATION_COLLECTION={{unnati_migration_collection|default("migrations")}}

#DB Directory
MIGRATION_DIR={{unnati_migration_dir|default("migrations")}}

#Enable/Disable Slack Messages
SLACK_COMMUNICATIONS_ON_OFF={{unnati_slack_communications_on_off|default("OFF")}}

#Slack URL to write the Exception Messages
SLACK_EXCEPTION_LOG_URL={{unnati_slack_exception_log_url|default("")}}

#Slack Token
SLACK_TOKEN={{unnati_slack_token|default("")}}

#Prefix where the service is hosted
URL_PREFIX={{unnati_url_prefix|default("api/v1")}}

#Health Check URL
HEALTH_CHECK_URL={{unnati_health_check_url|default("/ping")}}

#Logging Directory
LOGGER_DIRECTORY={{unnati_logger_directory|default("/opt/unnati/logs")}}

#Path to unnati service Api Documentation
APIDOC_URL={{unnati_apidoc_url|default("/improvement-project/apidoc/*")}}

#Default Path to unnati service Api Documentation
DEFAULT_APIDOC_URL={{unnati_default_apidoc_url|default("/apidoc")}}

#API Documentation Path
APIDOC_PATH={{unnati_apidoc_path|default("/public/apidoc/")}}

#Body Parser Limit Value
BODY_PARSER_LIMIT={{unnati_body_parser_limit|default("50MB")}}

#Public Folder Path Inside the container
PUBLIC_FOLDER_PATH={{unnati_public_folder_path|default("public")}}

#CSV Reports Path 
CSV_REPORTS_PATH={{unnati_csv_reports_path|default("reports")}}

#Cloud Storage Settings
CLOUD_STORAGE={{unnati_cloud_storage|default("AZURE")}}
BUCKET_NAME={{unnati_bucket_name|default("")}}

#Kendra Service URL
KENDRA_APPLICATION_ENDPOINT=http://kendra-service.{{namespace}}.svc.cluster.local

#Kendra Service base path
KENDRA_BASE_URL={{unnati_kendra_base_url|default("/kendra/")}}

#SL-Sunbird Service URL
SUNBIRD_SERIVCE_HOST=http://sl-sunbird-service.{{namespace}}.svc.cluster.local

#Sunbird Service Base Path
SUNBIRD_SERIVCE_BASE_URL={{unnati_sunbird_service_base_url|default("/sunbird/")}}

#Enable/Disable Kafka Comunications
KAFKA_COMMUNICATIONS_ON_OFF={{unnati_kafka_communications_on_off|default("ON")}}

#Kafka URL
KAFKA_URL={{unnati_kafka_url|default("")}}

#Kafka Topic to send the notification messages
NOTIFICATIONS_TOPIC={{unnati_notifications_topic|default(env+"-sl-notifications")}}

#Unnati Application Type
IMPROVEMENT_PROJECT_APP_TYPE={{unnati_improvement_project_app_type|default("improvement-project")}}

#Unnati Project APP Name
IMPROVEMENT_PROJECT_APP_NAME={{unnati_improvement_project_app_name|default("samiksha")}}

#Kafka Topic to send the Improvement Project notification messages
IMPROVEMENT_PROJECT_NOTIFICATIONS_TOPIC={{unnati_improvement_project_notifications_topic|default(env+"-improvement-projects")}}

#Kafka Topic for all the Users
TOPIC_FOR_ALL_USERS={{unnati_topic_for_all_users|default("-allusers")}}

#Kafka Topic for Submission
SUBMISSION_TOPIC={{unnati_submission_topic|default("IMPROVEMENT-SERVICE")}}

#Dhiti Service Host
DHITI_SERIVCE_HOST=http://dhiti-service.{{namespace}}.svc.cluster.local

#Dhiti Service Base Path
DHITI_SERIVCE_BASE_URL={{unnati_dhiti_base_url|default("/dhiti/")}}

#SL-Assessment Service Host
ASSESSMENT_APPLICATION_ENDPOINT=http://sl-assessments-service.{{namespace}}.svc.cluster.local

#SL-Assessment Service Base Path
ASSESSMENT_BASE_URL={{unnati_assessment_base_url|default("/assessment/")}}

#Access Token Offline Validation
VALIDATE_ACCESS_TOKEN_OFFLINE={{unnati_validate_access_token_offline|default("OFF")}}

#Keycloak Public Key Folder
KEYCLOAK_PUBLIC_KEY_PATH={{unnati_keycloak_public_key_path|default("keycloak-public-keys")}}

#Root Org ID
ROOT_ORGANISATION_ID={{unnati_root_organistion_id|default("")}}