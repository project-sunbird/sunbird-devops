- type: log
  enabled: true
  paths:
    - /var/log/cassandra/system.log
    - /var/log/cassandra/debug.log
  multiline.pattern: '^[INFO|ERROR|WARN|DEBUG]'
  multiline.negate: true
  multiline.match: after

- type: log
  enabled: true
  paths:
  - /var/log/cassandra/gc.log.0
  multiline.pattern: '^[0-9]{4}-[0-9]{2}-[0-9]{2}'
  multiline.negate: true
  multiline.match: after
