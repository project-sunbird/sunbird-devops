pipeline {
    agent {
        label 'general-dev'
    }
    stages {
        stage('Deploy') {
            steps {
                step ([$class: 'CopyArtifact',
                    projectName: 'Build/Docker_Registry_Build',
                    filter: 'metadata.json']);
                sh 'METADATA_FILE=metadata.json ARTIFACT_LABEL=silver ./pipelines/dockerTagSilver.sh'
            }
        }
    }
    post {
        success {
            archive includes: "metadata.json"
        }
    }
}